{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["cli/*"],
      "@lib-shared/*": ["nextjs/src/lib-shared/*"]
